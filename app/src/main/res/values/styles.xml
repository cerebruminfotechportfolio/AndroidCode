<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextBackground" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_round_background</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/color_858585</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <!--  <item name="android:cursorVisible">true</item>
          <item name="android:textCursorDrawable">@drawable/bg_blue_cursor</item>-->

    </style>

    <style name="EditTextBackground2" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_white_semi_round</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/color_9e9e9e</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <!--  <item name="android:cursorVisible">true</item>
          <item name="android:textCursorDrawable">@drawable/bg_blue_cursor</item>-->

    </style>
    <style name="popupWindowAnim">
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:windowEnterAnimation">@anim/slide_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_to_right</item>
    </style>
    <style name="TextViewBackground" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_white_semi_round</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="hintTextColor">@color/color_858585</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <!--  <item name="android:cursorVisible">true</item>
          <item name="android:textCursorDrawable">@drawable/bg_blue_cursor</item>-->

    </style>

    <style name="NavigationViewStyle">
    <item name="android:textColorPrimary">@color/white</item>
    <item name="android:textColorSecondary">@color/colorPrimary</item>
    <item name="android:listDivider">@android:color/transparent</item>
    <item name="android:textSize">@dimen/_13ssp</item>
    <item name="listPreferredItemHeightSmall">43dp</item>
    <item name="fontFamily">@font/montserrat_regular</item>

    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <array name="filter_product_sort">
        <item>All</item>
        <item>Recently Added</item>
        <item>Older to New</item>
        <item>High Popularity</item>
        <item>Low Popularity</item>
        <item>Price High</item>
        <item>Price Low</item>
        <item>Rating High</item>
        <item>Rating Low</item>

    </array>

    <array name="filter_product_item_type">
        <item>All</item>
        <item>Fresh</item>
        <item>Veg</item>
        <item>Non-Veg</item>
        <item>Organic</item>
        <item>Fresh</item>
        <item>Allopathic</item>
        <item>Homopathic</item>
        <item>Stored</item>

    </array>
    <array name="product_tax">
        <item>Select Tax From List</item>
        <item>New Tax (2.5%)</item>
        <item>Vat (5%)</item>
    </array>

    <array name="product_unit_type">
        <item>Select unit type</item>
        <item>New Tax (2.5%)</item>
        <item>Vat (5%)</item>
    </array>

    <array name="media_type">
        <item>Photo</item>
        <item>Video</item>
    </array>

    <style name="style_tab" parent="@android:style/TextAppearance">
    <item name="android:fontFamily">@font/poppins_semibold</item>
    <item name="android:textSize">@dimen/_14ssp</item>
    <item name="android:singleLine">true</item>
    </style>

</resources>