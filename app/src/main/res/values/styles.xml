<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextBackground" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_round_background</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <!--  <item name="android:cursorVisible">true</item>
          <item name="android:textCursorDrawable">@drawable/bg_blue_cursor</item>-->

    </style>
    <style name="popupWindowAnim">
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:windowEnterAnimation">@anim/slide_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_to_right</item>
    </style>
    <style name="TextViewBackground" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/edittext_round_background</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <!--  <item name="android:cursorVisible">true</item>
          <item name="android:textCursorDrawable">@drawable/bg_blue_cursor</item>-->

    </style>

    <style name="NavigationViewStyle">
    <item name="android:textColorPrimary">@color/white</item>
    <item name="android:textColorSecondary">@color/colorPrimary</item>
    <item name="android:listDivider">@android:color/transparent</item>
    <item name="android:textSize">@dimen/_13ssp</item>
    <item name="listPreferredItemHeightSmall">43dp</item>
    <item name="fontFamily">@font/montserrat_regular</item>

    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>