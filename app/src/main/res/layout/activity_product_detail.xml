<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        app:hideKeyBoardOnClick="@{`back`}">

        <include
            android:id="@+id/topView"
            layout="@layout/home_toolbar" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/_16sdp" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/_16sdp" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guide_begin"
            app:layout_constraintTop_toBottomOf="@id/topView"
            app:layout_constraintVertical_bias="0.0">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_16sdp">


                <TextView
                    android:id="@+id/tv_products"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/product_detail"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_20ssp"
                    app:font="@{`bold`}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivProduct"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:scaleType="centerCrop"
                    android:src="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_products" />

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_4sdp"
                    android:text="@string/product_detail"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_16ssp"
                    app:font="@{`bold`}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivProduct" />


                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="Rs.888888888"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14ssp"
                    app:font="@{`regular`}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_name" />


                <RatingBar
                    android:id="@+id/rating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:rating="4"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_product_price"
                    app:layout_constraintStart_toEndOf="@+id/tv_product_price"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_name" />

                <TextView
                    android:id="@+id/tv_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="Rs.888888888"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14ssp"
                    app:font="@{`regular`}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_price" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_offer" />

                <TextView
                    android:id="@+id/tv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:gravity="center"
                    android:text="@string/available_management"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@id/switch_stock"
                    app:layout_constraintStart_toEndOf="@+id/switch_available"
                    app:layout_constraintTop_toTopOf="@+id/switch_available" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/description"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_18ssp"
                    app:font="@{`bold`}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/switch_available" />

                <TextView
                    android:id="@+id/tv_desc_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/description"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14ssp"
                    app:font="@{`regular`}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc" />


                <ImageView
                    android:id="@+id/iv_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:src="@drawable/ic_cart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc_value" />


                <ImageView
                    android:id="@+id/iv_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:src="@drawable/ic_cart"
                    app:layout_constraintStart_toEndOf="@+id/iv_cart"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc_value" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_edit"
                    android:layout_width="0dp"
                    android:minWidth="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/bg_btn_dark_blue"
                    android:gravity="center"
                    android:padding="@dimen/_16sdp"
                    android:text="@string/edit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp"
                    app:font="@{`semibold`}"
                    app:layout_constraintEnd_toStartOf="@+id/tv_active"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_cart" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_active"
                    android:layout_width="0dp"
                    android:minWidth="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/bg_btn_dark_blue"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:padding="@dimen/_16sdp"
                    android:text="@string/active"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp"
                    app:font="@{`semibold`}"
                    app:layout_constraintEnd_toStartOf="@+id/tv_delete"
                    app:layout_constraintStart_toEndOf="@+id/tv_edit"
                    app:layout_constraintTop_toBottomOf="@+id/iv_cart" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/bg_btn_dark_blue"
                    android:gravity="center"
                    android:padding="@dimen/_16sdp"
                    android:text="@string/delete"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp"
                    app:font="@{`semibold`}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_active"
                    app:layout_constraintTop_toBottomOf="@+id/iv_cart" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>